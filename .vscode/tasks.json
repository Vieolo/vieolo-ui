{
    "version": "2.0.0",        
    "tasks": [
        {
            "label": "Version Bump -- build",
            "type": "shell",
            "command": "node",            
            "args": [                
                "version_bump.mjs",
                "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Version Bump -- minor",
            "type": "shell",
            "command": "node",
            "args": [                
                "version_bump.mjs",
                "minor"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}